@layout("/common/_curd/_container.html"){

	<form data-url="${basePath}/${code}/save" method="post" class="form-horizontal" role="form">
		<!-- 表单 -->
		@ var _table="dg_worktype";
		@ var _col=[
		@			  {name:"工种名称", index:"name", type:"text",newline:true,length:4,required:"required"},
		@			  {name:"是否需要认证", index:"check", type:"select_210",newline:false,length:4,required:"required"},
		@			  {name:"每日酬劳", index:"salary", type:"text",newline:true,length:4,required:"required"},
		@			  {name:"加班金额", index:"over_money", type:"text",newline:false,length:4},
		@             {name:"描述", index:"mark", type:"text",newline:true,length:4}
		@		   ];
		@ include("/common/_curd/_add.html", {"col":_col, "table":_table}){}
		
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html", {btn_save:"新增", btn_close:"关闭"}) {}
	</form>

@}

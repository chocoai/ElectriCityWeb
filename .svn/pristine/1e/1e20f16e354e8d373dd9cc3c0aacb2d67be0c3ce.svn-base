@layout("/common/_curd/_container.html"){

	<form class="form-horizontal" role="form">
		<!-- 表单 -->
		@ var _col=[
		@			  {name:"订单标题", index:"title", type:"text",newline:true,length:4},
		@			  {name:"电工用户", index:"dgUser", type:"text",newline:false,length:4},
		@			  {name:"总额", index:"total_money", type:"double",newline:true,length:4},
		@			  {name:"创建时间", index:"create_id", type:"text",newline:false,length:4},		
		@			  {name:"订单内容", index:"content", type:"textarea",newline:true,length:10}	
		@		   ];
		@ include("/common/_curd/_view.html", {"col":_col}){}
		
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html", {btn_close:"关闭"}) {}
	</form>

@}

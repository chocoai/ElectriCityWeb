@layout("/common/_curd/_container.html"){

	<form data-url="${basePath}/${code}/save" method="post" class="form-horizontal" role="form">
		<!-- 表单 -->
		@ var _table="dg_order";
		@ var _col=[
		@			  {name:"电工用户ID", index:"create_id", type:"text",newline:true,length:4,required:"required"},
		@			  {name:"订单标题", index:"title", type:"text",newline:false,length:4,required:"required"},
		@			  {name:"总金额", index:"total_money", type:"text",newline:true,length:4,required:"required"},
		@			  {name:"订单内容", index:"content", type:"text",newline:false,length:4,required:"required"}
		@		   ];
		@ include("/common/_curd/_add.html", {"col":_col, "table":_table}){}
		
		<!-- 按钮 -->
		@ include("/common/_curd/_btn.html", {btn_save:"新增", btn_close:"关闭"}) {}
	</form>

@}
